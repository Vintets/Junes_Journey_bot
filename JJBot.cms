SUB(read_data_level)
    UNDEFINE($items)
    
    $items_filename = STRCONCAT("levels\", $input_level, "_", $hash_level, ".txt")
    $level_folder = STRCONCAT("levels\level_", $input_level)
    //LOGWRITE($items_filename)
    
    IF($isDataLevel = 0)
