SUB(add_item, $it_name, $it_x, $it_y)
    LOGWRITEC(STRCONCAT("Добавяем предмет: '", $it_name, "' ", $it_x, "x", $it_y), 16711680) // синий
    ARRPUSH($items, $it_name)
    ARRPUSH($items, $it_x)
    ARRPUSH($items, $it_y)
    $new_item = STRCONCAT($it_name, ",", $it_x, ",", $it_y)
    TFWRITE($items_filename, $new_item)
END_SUB

