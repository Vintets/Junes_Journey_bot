SUB(nox_window)
    // получение параметров NoxPlayer
    $nox = WNDFIND("NoxPlayer")
    WNDGETINFO($nox, $win_x, $win_y, $win_w, $win_h)
    IF($loglevel >= 4)
        LOGWRITE("Nox: ", $nox, ", ", $win_x, ",", $win_y, "  ", $win_w, "x", $win_h)
        // 227, 87      1604x934
        // 229, 119     1600x900
    END_IF
    
    IF($nox = 0)
        LOGWRITEC("Не найдено окно Nox", 255)
        HALT
    END_IF
    IF(($win_x < 0) | ($win_y < 0))
        LOGWRITEC("Окно Nox свёрнуто", 255)
        HALT
    END_IF
END_SUB

SUB(init)
    LOGCLEAR
    IF($loglevel > 0)
        LOGSHOW(1, 0, 510)
        $hwnd_log = WNDFIND("Лог")
        WNDSIZE($hwnd_log,335,400)
    END_IF
    
    $imdelta_x = 0
    $imdelta_y = 0
    
    // window NoxPlayer
    IF($test < 2)
        nox_window()
    ELSE
        $win_x = 160 - 2
        $win_y = 115 - 32
        $win_w = 1604
        $win_h = 934
    END_IF
    
    // window sub
    $wx1 = $win_x + 2
    $wy1 = $win_y + 32
    $win_w = $win_w - 4
    $win_h = $win_h - 34
    $wx2 = $wx1 + $win_w - 1
    $wy2 = $wy1 + $win_h - 1
    IF($loglevel >= 4)
        LOGWRITE("Main field: ", $wx1, ",", $wy1, "  ", $wx2, ",", $wy2, "  ", $win_w, "x", $win_h)
    END_IF
    
    // items zone
    $itx1 = $wx1 + 36
    $ity1 = $wy1 + 821
    $itx2 = $wx1 + 1407
    $ity2 = $wy1 + 864
    
    // play button delta
    $play_x = 1490
    $play_y = 800
    
    LOGWRITE(\n, \n, "****************************************")
END_SUB

SUB(find_pic_nw, $fpnw_x1,$fpnw_y1,$fpnw_x2,$fpnw_y2, $fpnw_image, $fpnw_percent, $fpnw_colorm)
    // поиск картинки без ожидания
    $found = 0
    $fpnw_x1 = $wx1 + $fpnw_x1
    $fpnw_y1 = $wy1 + $fpnw_y1
    $fpnw_x2 = $wx1 + $fpnw_x2
    $fpnw_y2 = $wy1 + $fpnw_y2
    GETSCREEN($fpnw_x1,$fpnw_y1,$fpnw_x2,$fpnw_y2)
    IF($fpnw_colorm ! 0)
        COLORMODE($fpnw_colorm, $fpnw_x1,$fpnw_y1,$fpnw_x2,$fpnw_y2)
    END_IF
    IF_PICTURE_IN($fpnw_x1,$fpnw_y1,$fpnw_x2,$fpnw_y2, STRCONCAT("textures\", $fpnw_image), 65280, $fpnw_percent)
        $found = 1
        $found_x = $_return1
        $found_y = $_return2
        IF($loglevel >= 4)
            LOGWRITE("Найдено  ", $fpnw_image, "  в ", $_return1, "/", $_return2)
        END_IF
    ELSE
        WAITMS(20)
    END_IF
END_SUB

SUB(find_pic_wait, $fpw_x1,$fpw_y1,$fpw_x2,$fpw_y2,$fpw_image, $fpw_percent, $fpw_colorm)
    // ожидание картинки
    $found = 0
    $time_notfound = $_ms + 20000		// 20 сек
    WHILE(($found = 0) & ($time_notfound > $_ms))
        find_pic_nw($fpw_x1,$fpw_y1,$fpw_x2,$fpw_y2, $fpw_image, $fpw_percent, $fpw_colorm)
    END_CYC
    IF($found = 0)
        LOGWRITE("время истекло, картинка не найдена")
    END_IF
END_SUB

SUB(get_hash_level)
    $isDataLevel = 0
    
    GETSCREEN($wx1,$wy1, $wx1+999,$wy1+4)
    $hash_level = PXLCRC($wx1,$wy1, $wx1+999,$wy1+4)
    LOGWRITE("hash_level ", $hash_level)
    
    $hash_level_file = INIREAD($levels_ini, "hash_level", $hash_level)
    IF($hash_level_file ! "")
        $isDataLevel = 1
    END_IF
END_SUB

SUB(is_task_fill)
    // проверяем какие задания есть, а какие закончились (из 3-х)
    UNDEFINE($tasks)
    // task 1
    IF_PICTURE_IN($wx1+50,$wy1+865, $wx1+430,$wy1+882, "textures\is_task.bmp", -1, 100)
        ARRPUSH($tasks, #TRUE)
    ELSE
        ARRPUSH($tasks, #FALSE)
    END_IF
    // task 2
    IF_PICTURE_IN($wx1+530,$wy1+865, $wx1+910,$wy1+882, "textures\is_task.bmp", -1, 100)
        ARRPUSH($tasks, #TRUE)
    ELSE
        ARRPUSH($tasks, #FALSE)
    END_IF
    // task 3
    IF_PICTURE_IN($wx1+1000,$wy1+865, $wx1+1380,$wy1+882, "textures\is_task.bmp", -1, 100)
        ARRPUSH($tasks, #TRUE)
    ELSE
        ARRPUSH($tasks, #FALSE)
    END_IF
    IF($loglevel >= 4)
        LOGWRITE("Tasks  ", $tasks[0], "-", $tasks[1], "-", $tasks[2])
    END_IF
END_SUB

