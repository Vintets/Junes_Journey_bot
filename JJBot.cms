SUB(check_pause_zone)
    // Проверка зоны паузы
    IF(($setX > 1510) & ($setY < 85))
        $set = 1
    END_IF
END_SUB

SUB(check_help_zone)
    // Проверка зоны помощи
    IF(($setX > 1470) & ($setY > 760))
        $set = 1
    END_IF
END_SUB

SUB(waiting_for_items_to_click)
    // ожидание клика по предмету
    $wait_time = $_time_t - 1
    $set = 1
    WHILE($set = 1)
        IF($wait_time < $_time_t)
            //HINTPOPUP("Внимание! Готов принять команду")
            LOGWRITEC("Внимание! Готов принять команду", 8355839)
            $wait_time = $_time_t + 10
            WAITMS(50)
        END_IF
        
        IF(ISKEYDOWN(1) = 1)
            $setX = $_xmouse - $wx1
            $setY = $_ymouse - $wy1
            $set = 0
            WHILE(ISKEYDOWN(1) = 1)	// ожидаем отпускания LM
                WAITMS(50)
            END_CYC
            
            check_pause_zone()
            check_help_zone()
        END_IF
        
        IF(ISKEYDOWN(#ESC) = 1)
            $set = 0
            LOGWRITEC("Работа прервана", 255)
            HINTPOPUP("Работа прервана")
            HALT
        END_IF
        WAITMS(30)
    END_CYC
    WAITMS(2500)
END_SUB

SUB(manual_click_words)
    // ручной поиск неизвесных картинок
    LOGWRITEC("Ручной поиск. Внимание!", 8355839)
    photo_items()
    ocr($ocrpar)
    read_ocr_result()
    
    UNDEFINE($need_words)
    ARRPUSH($need_words, $ocr_result[0])
    ARRPUSH($need_words, $ocr_result[1])
    ARRPUSH($need_words, $ocr_result[2])
    
    $manual_select_word = 0
    WHILE($manual_select_word = 0)
        waiting_for_items_to_click()
        photo_items()
        ocr($ocrpar)
        read_ocr_result()
        FOR($i = 0, $i < 3)
            IF($need_words[$i] ! $ocr_result[$i])
                $manual_select_word = 1
                $need_word = $need_words[$i]
                add_item($need_word, $setX, $setY)
                $i = 100
            END_IF
        END_CYC
    END_CYC
END_SUB

